{{!-- pulls out book information from each collection --}}
<div class = "h-fit">
    <h3 class="text-xl text-center w-200 current">{{book.bookTitle}} by {{book.bookAuthor}}</h3>
    <div class="flex flex-row">
        <div class="w-1/5 h-48"><a href="{{book.eBookUrl}}"><img  src="{{book.bookImageUrl}}"></a></div>
        <div class="w-4/5">
            <p >Description: {{book.bookDescription}}</p>
            <p >ISBN: {{book.bookIsbn}}</p>
            <p>Pages: {{book.bookPages}}</p>
            <p>Published by: {{book.publisherName}} on {{format_date book.publicationDate}}</p>
        </div>
    </div>
    <br>
    <hr>
</div>
