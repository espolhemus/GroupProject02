<!-- books.handlebars -->
<div class="col-span-8 p-20 text-xl outline outline-1"></div>
    <!-- Container to hold free books content -->
    <div id="freebooks-container" class="max-w-md mx-auto overflow-y-auto mt-4 p-4 border rounded">
        {{#each books}}
            <div class="card mb-4">
                <!-- Display book cover image -->
                <img src="{{this.volumeInfo.imageLinks.thumbnail}}" alt="{{this.volumeInfo.title}}" class="mt-2 rounded">
                <!-- Display book details as links with Tailwind CSS styling -->
                <h4 class="card-title">
                    <a href="{{this.volumeInfo.infoLink}}" target="_blank" class="text-blue-500 hover:underline">
                        {{this.volumeInfo.title}}
                    </a>
                </h4>
                <p>By: {{this.volumeInfo.authors}}</p>
            </div>
        {{/each}}
    </div>

    <!-- Add the genre form -->
    <form id="genre-form">
      <label for="genre-input">Select Genres:</label>
      <input type="checkbox" name="genre" value="fiction"> Fiction
      <input type="checkbox" name="genre" value="humour"> Humour
      <input type="checkbox" name="genre" value="fantasy"> Fantasy
      <input type="checkbox" name="genre" value="mystery"> Mystery
      <input type="checkbox" name="genre" value="science"> Science
      <input type="checkbox" name="genre" value="history"> History
      <input type="checkbox" name="genre" value="nature"> Nature
      <input type="checkbox" name="genre" value="poetry"> Poetry
      <input type="checkbox" name="genre" value="self-help"> Self-Help
  
      <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Search</button>
    </form>
</div>
